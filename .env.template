# Template configurazione tornello/porta
# Copia in .env e modifica i valori secondo le tue necessità

# CONFIGURAZIONE GENERALE
DEVICE_ID=turnstile_001
DEVICE_TYPE=turnstile  # turnstile o door
ENVIRONMENT=production  # test o production

# CONFIGURAZIONE BACKEND
BACKEND_URL=https://api.example.com
API_KEY=your_api_key_here
WEBSOCKET_URL=wss://api.example.com/ws

# CONFIGURAZIONE GPIO - LETTORI NFC
NFC_READER_IN_RST=22
NFC_READER_OUT_RST=24  # Solo per tornello

# CONFIGURAZIONE GPIO - RELÈ
RELAY_CHANNEL_1=18
RELAY_CHANNEL_2=19  # Solo per tornello

# CONFIGURAZIONE SPI - LETTORI NFC RC522
SPI_BUS_IN=0
SPI_DEVICE_IN=0
SPI_BUS_OUT=0  # Solo per tornello
SPI_DEVICE_OUT=1  # Solo per tornello

# CONFIGURAZIONE TIMING
RELAY_OPEN_DURATION=3.0  # secondi
NFC_READ_TIMEOUT=5.0
CONNECTION_TIMEOUT=10.0

# CONFIGURAZIONE FALLBACK
FALLBACK_MODE_ENABLED=true
MAX_OFFLINE_LOGS=1000

# CONFIGURAZIONE LOGGING
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=/home/turnstile/logs/turnstile.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# CONFIGURAZIONE AGGIORNAMENTI
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=3600  # secondi (1 ora)
UPDATE_ENDPOINT=https://api.example.com/updates

# FILE LOCALI
WHITELIST_FILE=/home/turnstile/data/whitelist.json
OFFLINE_LOGS_FILE=/home/turnstile/data/offline_logs.json